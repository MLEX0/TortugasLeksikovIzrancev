<Page x:Class="TartugaLeksikovIzrancev.Pages.BasketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TartugaLeksikovIzrancev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      
      Title="BasketPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <WrapPanel 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
           
            <Button x:Name="btnBack" 
                    Content="К меню"

                    Margin="10 0" Click="btnBack_Click"
                    >

            </Button>
        </WrapPanel>
        <TextBlock Grid.Column="1"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Корзина"
                   FontSize="30">

        </TextBlock>

        <ListView x:Name="lvOrder"
                  Grid.Row="1"
                  Grid.RowSpan="4"
                  Grid.Column="0"
                  Grid.ColumnSpan="3"
                  KeyDown="lvOrder_KeyDown"
                  >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Наименование" Width="100" DisplayMemberBinding="{Binding ProductName}"></GridViewColumn>
                    <GridViewColumn Header="Цена" Width="100" DisplayMemberBinding="{Binding Cost}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>


        <TextBlock x:Name="tbTable"
                   Grid.Column="3"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Ваш столик"
                   FontSize="18">
            
        </TextBlock>

        <TextBlock x:Name="tbPrice"
                   Grid.Column="3"
                   Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Цена"
                   FontSize="18">

        </TextBlock>

        <StackPanel Grid.Row="3"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    >
            <RadioButton x:Name="rbMoney"
                         Content="Наличными"
                         IsChecked="True"
                         FontSize="18">
                
            </RadioButton>
            <RadioButton Name="rbCard"
                         Content="Картой"
                         FontSize="18">
                
            </RadioButton>
        </StackPanel>    
        <Button x:Name="btnGoBasket"
            Grid.Row="4"
                Grid.Column="3"
                Width="110"
                Height="40"
                Content="Оформить заказ" Click="btnGoBasket_Click" >

        </Button>
    </Grid>
</Page>
